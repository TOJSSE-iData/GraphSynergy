{
    "name": "Oneil",
    "n_gpu": 1,

    "arch": {
        "type": "GraphSynergy",
        "args": {
            "emb_dim": 64,
            "n_hop": 2,
            "l1_decay": 1e-6,
            "therapy_method": "transformation_matrix" 
        }
    },
    "data_loader": {
        "type": "KFoldDataLoader",
        "args":{
            "data_dir": "data/Oneil/",
            "batch_size": 256,
            "score": "synergy",
            "test_fold": 0,
            "n_hop": 2,
            "n_memory": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "mse", "rmse", "pcc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2, 
        "monitor": "min mse",
        "early_stop": 10,
        "tensorboard": false
    }
}
